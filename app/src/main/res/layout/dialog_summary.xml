<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorbg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/tv_summary"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#8a1b12"
                android:layout_marginBottom="3sp"
                android:text="Order Summery"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_summary"
                    android:id="@+id/ll_all_total"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Result All Total"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Quantity"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/total_quantity"
                            android:text="00.00"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:textColor="#000000"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Weight"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/total_weiget"
                            android:text="00.00"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:textColor="#000000"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="VAT(5%)"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/total_without_vat_before_discount"
                            android:text="00.00"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:textColor="#000000"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="VAT(14.5%)"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/total_without_vat_after_discount"
                            android:text="00.00"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:textColor="#000000"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total VAT"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/total_vat"
                            android:text="00.00"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:textColor="#000000"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_discount_applied_for"
                    android:layout_below="@+id/ll_all_total"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:orientation="vertical"
                    android:layout_marginTop="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Discount Applied"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Discount Percentage"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/discount_percentage"
                            android:text="00.00"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:textColor="#000000"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Discount"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/total_discount"
                            android:text="00.00"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:textColor="#000000"/>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_invoice_total"
                    android:layout_below="@+id/ll_discount_applied_for"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Invoice Total"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/invoice_total"
                        android:text="00.00"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:layout_alignParentRight="true"/>

                </LinearLayout>
            </RelativeLayout>


    </ScrollView>

</LinearLayout>
