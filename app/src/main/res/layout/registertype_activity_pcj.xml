<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbg"
    android:orientation="vertical" >
    
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        layout="@layout/header_item_pcj" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:layout_marginTop="108dp"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">



        <Button
            android:id="@+id/btnRegCustomer"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="#DD371B"
            android:paddingLeft="25dp"
            android:scaleType="centerCrop"
            android:text="DEALER REGISTER"
            android:textColor="@color/coloricon"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btnRegChef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_header"
            android:paddingLeft="25dp"
            android:scaleType="centerCrop"
            android:text="DELIVERY BOY REGISTER"
            android:textColor="#000000"
            android:textSize="17sp" />

    </LinearLayout>

</RelativeLayout>
