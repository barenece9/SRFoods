<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbg"
    android:orientation="vertical" >
    
   <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        layout="@layout/header_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:layout_marginTop="108dp"
        android:orientation="vertical"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp">


        <Button
            android:id="@+id/btnloginCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:background="@drawable/login_header"
            android:paddingLeft="25dp"
            android:scaleType="centerCrop"
            android:text="DEALER LOGIN"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btnloginChef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_header"
            android:paddingLeft="25dp"
            android:scaleType="centerCrop"
            android:text="DELIVERY BOY LOGIN"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btnloginSalesPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_header"
            android:paddingLeft="25dp"
            android:scaleType="centerCrop"
            android:text="SALES PERSON LOGIN"
            android:textColor="#000000"
            android:textSize="17sp" />



    </LinearLayout>

</RelativeLayout>
