<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbg"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:id="@+id/include"
        android:layout_height="wrap_content"
        layout="@layout/header_item" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_marginTop="10dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <EditText
            android:id="@+id/etndealername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter dealer name*"
            android:textColor="#000000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etndealeremail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter dealer email*"
            android:textColor="#000000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etndealerephone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter dealer phone"
            android:textColor="#000000"
            android:textSize="17sp"
            android:inputType="number"/>

        <EditText
            android:id="@+id/etndealeremobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter dealer mobile*"
            android:textColor="#000000"
            android:textSize="17sp"
            android:inputType="number"
            android:maxLength="10"/>

        <EditText
            android:id="@+id/etndealereadditionalmobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter dealer additional mobile"
            android:textColor="#000000"
            android:textSize="17sp"
            android:inputType="number"/>

        <EditText
            android:id="@+id/etndealerusername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter user name*"
            android:textColor="#000000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etndealerepassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter password*"
            android:textColor="#000000"
            android:textSize="17sp"

            android:password="true"/>

        <EditText
            android:id="@+id/etndealereconpassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter confirm password*"
            android:textColor="#000000"
            android:textSize="17sp"

            android:password="true"/>

        <EditText
            android:id="@+id/etndealereaddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter dealer address*"
            android:textColor="#000000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etndealereshippingaddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter dealer shipping address*"
            android:textColor="#000000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etndealerlocation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter dealer location*"
            android:textColor="#000000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etndealercity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter city*"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/spinnerdealerstate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="select state"
            android:textColor="#000000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etndealerzip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter pin/zip*"
            android:textColor="#000000"
            android:textSize="17sp"
            android:inputType="number"
            android:maxLength="6" />

        <Spinner
            android:id="@+id/spinnerwarehouselist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:visibility="gone"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/spinnertranspoter"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/spinnervatreg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="select vat reg or not"
            android:textColor="#000000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etndealervatno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter vat no"
            android:textColor="#000000"
            android:textSize="17sp"
            android:inputType="number"
            android:maxLength="11" />

        <Button
            android:id="@+id/btndealerreg"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="#DD371B"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:text="Register"
            android:layout_marginBottom="15dp"
            android:textColor="#000000"
            android:textSize="18sp" />


    </LinearLayout>

    </ScrollView>

</RelativeLayout>
