<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbg"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:layout_marginTop="108dp"
        android:orientation="vertical"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter regd. mobile no,we will send username and password in your mobile"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="10sp"
            android:layout_gravity="center_horizontal"/>


        <EditText
            android:id="@+id/etndealeremailid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter regd. mobile no"
            android:textColor="#000000"
            android:textSize="17sp"
            android:inputType="number"/>


        <Button
            android:id="@+id/btnforgetpassdone"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="#DD371B"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:text="Done"
            android:textColor="#000000"
            android:textSize="18sp" />




    </LinearLayout>

</RelativeLayout>