<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorbg"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp" >

    <TextView
        android:id="@+id/Order_Number"
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content"
        android:text="Order_Number"
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/Invoice_number"
        android:layout_width="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content"
        android:text="Invoice_number"
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="0dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Dealer_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Dealer_Name"
                android:layout_marginRight="5dip"
                android:textSize="12dip"
                android:textColor="#040404"
                android:layout_marginTop="1dp"
                android:textStyle="bold"/>


            <!-- Artist Name -->
            <TextView
                android:id="@+id/Order_Assign_Date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:textSize="11dip"
                android:textStyle="bold"
                android:layout_marginTop="1dip"
                android:text="Order_Assign_Date" />

            <TextView
                android:id="@+id/Est_Delivery_Date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:textSize="11dip"
                android:textStyle="bold"
                android:layout_marginTop="1dip"
                android:text="Est_Delivery_Date" />


            <TextView
                android:id="@+id/Due_Amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Due Amount"
                android:layout_marginRight="5dip"
                android:textSize="11dip"
                android:textColor="#343434"
                android:layout_marginTop="1dp"
                android:textStyle="bold"/>

            <!-- Rightend Duration -->


            <TextView
                android:id="@+id/Dealer_Mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Dealer_Mobile"
                android:layout_marginRight="5dip"
                android:textSize="11dip"
                android:textColor="#343434"
                android:layout_marginTop="1dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/Shipping_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping_Address"
                android:layout_marginRight="5dip"
                android:textSize="11dip"
                android:textColor="#343434"
                android:layout_marginTop="1dp"
                android:textStyle="bold"/>



            <TextView
                android:id="@+id/Order_Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order_Amount"
                android:textColor="#343434"
                android:textSize="11dip"
                android:visibility="gone"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/Order_Status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#497C13"
                android:textSize="11dip"
                android:layout_marginTop="1dip"
                android:text="Order_Status"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginBottom="0dp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:orientation="vertical">

            <!-- Artist Name -->
            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:id="@+id/call"
                android:gravity="center"
                android:textSize="13sp"
                android:background="#0D973B"
                android:layout_marginBottom="5dp"
                android:textColor="@color/coloricon"
                android:text="Call"/>
            <Button
                android:layout_width="80dp"
                android:id="@+id/view_details"
                android:background="#DD371B"
                android:textColor="@color/coloricon"
                android:paddingLeft="4dp"
                android:textSize="13sp"
                android:paddingRight="4dp"
                android:gravity="center"
                android:layout_height="35dp"
                android:text="Details"/>


        </LinearLayout>

    </LinearLayout>




</LinearLayout>


