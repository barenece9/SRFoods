<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbg"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include"
        layout="@layout/header_item" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/txt_order_no"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_below="@+id/include"
        android:layout_marginTop="2dp"
        android:text="Order No"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/txt_invoice_amount"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_below="@+id/txt_order_no"
        android:layout_marginTop="0dp"
        android:text="Invoice Amount"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true"
        android:layout_below="@+id/txt_invoice_amount"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="2dp"
            android:id="@+id/scheme_list"
            android:layout_marginBottom="45dp">
        </ListView>



    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/txt_outstanding"
        android:gravity="center"
        android:textColor="#000000"
        android:text="Outstanding Amount"/>

</RelativeLayout>
