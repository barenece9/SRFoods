<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbg"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"

        android:layout_marginTop="105dp"
        android:orientation="vertical"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="30sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/logo"
            android:layout_gravity="center_horizontal"/>


        <EditText
            android:id="@+id/etndealerusername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter user name"
            android:textColor="#000000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etndealerpassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:paddingLeft="25dp"
            android:background="@drawable/rectangle_edit_bg"
            android:scaleType="centerCrop"
            android:hint="enter password"
            android:textColor="#000000"
            android:textSize="17sp"
            android:password="true"/>

        <Button
            android:id="@+id/btndealerlogin"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="#DD371B"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:text="Login"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rememberme"
                android:textSize="14sp"
                android:text="Remember me"/>
            <!--<TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/forgotpass"
                 android:text="forgot username \n and password ?"
                 android:textColor="#000000"
                 android:textSize="13sp"
                 android:layout_marginTop="5dp"
                 android:gravity="center_vertical"
                 android:layout_alignParentRight="true"
                 android:layout_centerHorizontal="true"/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forgotpass"
                android:text="forgot username and password ?"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:layout_below="@+id/rememberme"/>

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>
